		<ProjectReference Include="..\TunNetCom.SilkRoadErp.Sales.Domain\TunNetCom.SilkRoadErp.Sales.Domain.csproj" />
	</ItemGroup>

	<ItemGroup>
		<Compile Update="Locales\SharedResource.en.Designer.cs">
			<DesignTime>True</DesignTime>
